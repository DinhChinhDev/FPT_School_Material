<Window x:Class="PRN221_DinhChinh_Ass3.WpfApp.UserWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN221_DinhChinh_Ass3.WpfApp"
        mc:Ignorable="d"
        Title="UserWindow"
        Height="450"
        Width="800">
    <Window.Resources>
        <!-- Define reusable styles here -->
        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FFDDDDDD"/>
            <Setter Property="BorderBrush" Value="#FFAAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFAAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="Image">
            <Setter Property="Stretch" Value="Fill"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>


    <Canvas>

        <DataGrid Name="dgvBooks"
                  Width="800"
                  Height="450"
                  ColumnWidth="*"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="dgvBooks_MouseDoubleClick"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  HorizontalAlignment="Center"
                  Canvas.Top="74"
                  VerticalAlignment="Top" SelectionChanged="dgvBooks_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding BookId}"></DataGridTextColumn>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding BookName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Price"
                                    Binding="{Binding Price}"></DataGridTextColumn>
                <DataGridTextColumn Header="Category"
                                    Binding="{Binding Category.CategoryName}"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="txtSearch"
                 Canvas.Left="10"
                 TextWrapping="Wrap"
                 Canvas.Top="48"
                 Width="390"
                 Height="20"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 TextChanged="txtSearch_TextChanged"
                 KeyDown="txtSearch_KeyDown"
                 Padding="0" />
        <ComboBox x:Name="cboCategory"
                  Canvas.Left="413"
                  Canvas.Top="48"
                  Width="120"
                  Height="20"
                  Padding="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  SelectionChanged="cboCategory_SelectionChanged" />
        <Button x:Name="btnSearch"
                Content="Search"
                Canvas.Left="349"
                FontSize="9"
                Background="Transparent"
                BorderBrush="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnSearch_Click"
                Foreground="Black"
                Canvas.Top="46" Height="23" Width="52" RenderTransformOrigin="0.714,0.573" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-10.869"/>
                    <RotateTransform/>
                    <TranslateTransform X="-2.529"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Button x:Name="btnLogout"
                Content="Logout"
                Canvas.Left="702"
                Canvas.Top="18"
                Height="20"
                Click="btnLogout_Click"
                RenderTransformOrigin="-0.01,0.483"
                HorizontalAlignment="Left"
                Padding="10 0"
                VerticalAlignment="Top" />
        <Button x:Name="btnOrder"
        Content="Order"
        Canvas.Left="552"
        Canvas.Top="46"
        Height="20"
        Width="61"
        Click="btnOrder_Click"
        IsEnabled="False"
        Padding="10,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Center" />
    </Canvas>
</Window>

    