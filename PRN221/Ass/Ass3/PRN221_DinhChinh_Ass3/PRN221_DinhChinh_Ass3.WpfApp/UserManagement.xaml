<Page x:Class="PRN221_DinhChinh_Ass3.WpfApp.UserManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PRN221_DinhChinh_Ass3.WpfApp"
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="800"
      Title="UserManagement">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#D35400" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="BorderBrush" Value="#f0a07e" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="5" />
            <Style.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="#f0a07e" Duration="0:0:0.3" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="#D35400" Duration="0:0:0.3" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FAFAF9" />
            <!--<Setter Property="BorderBrush" Value="#D35400" />-->
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#5A5A5A" />
        </Style>
    </Page.Resources>

    <Canvas Background="White" Loaded="Canvas_Loaded">
        <DataGrid Name="dgvUsers"
                  Height="225"
                  Width="800"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  SelectionChanged="dgvUsers_SelectionChanged"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  ColumnWidth="*"
                  IsReadOnly="True"
                  Loaded="dgvUsers_Loaded"
                  Canvas.Left="1"
                  Canvas.Top="44"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding AppUserId}" />
                <DataGridTextColumn Header="Username"
                                    Binding="{Binding UserName}" />
                <DataGridTextColumn Header="Password"
                    Binding="{Binding Password}" />

                <DataGridCheckBoxColumn Header="Is Shipper"
                                    Binding="{Binding IsShipper}"
                                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBox x:Name="txtId"
                 Canvas.Left="228"
                 TextWrapping="Wrap"
                 Canvas.Top="291"
                 Width="120"
                 IsEnabled="False" />
        <Label Content="Id"
               Canvas.Left="146"
               Canvas.Top="291" />
        <Label Content="Username"
               Canvas.Left="146"
               Canvas.Top="322"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <TextBox x:Name="txtUsername"
                 Canvas.Left="228"
                 TextWrapping="Wrap"
                 Canvas.Top="321"
                 Width="120"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" />
        <Label Content="Password"
               Canvas.Left="397"
               Canvas.Top="322"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <PasswordBox x:Name="txtPassword"
                     Canvas.Left="479"
                     Canvas.Top="321"
                     Width="109"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     PasswordChanged="txtPassword_PasswordChanged"
                     Visibility="Visible" />

        <TextBox x:Name="txtPasswordReveal"
                 Canvas.Left="479"
                 Canvas.Top="321"
                 Width="120"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Visibility="Collapsed"
                 IsReadOnly="True" />

        <Button x:Name="btnShowPassword"
                Canvas.Left="588"
                Canvas.Top="322"
                Width="20"
                Height="16"
                Content="👁"
                Click="btnShowPassword_Click"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                Foreground="Black"
                Padding="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" RenderTransformOrigin="-0.203,-1.02" />

        <Button x:Name="btnDelete"
                Content="Delete"
                Canvas.Left="380"
                Canvas.Top="412"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnDelete_Click" />
        <Button x:Name="btnSave"
                Content="Save"
                Canvas.Left="257"
                Canvas.Top="412"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnSave_Click" />
        <Button x:Name="btnClear"
                Content="Clear"
                Canvas.Left="507"
                Canvas.Top="412"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnClear_Click" />
        <Label Content="IsShipper"
               Canvas.Left="397"
               Canvas.Top="289"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <CheckBox x:Name="checkIsShipper"
                  Canvas.Left="479"
                  Canvas.Top="295" />
        <Label Content="USER MANAGEMENT"
               Canvas.Left="316"
               Canvas.Top="8"
               FontSize="16"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Top" />
    </Canvas>

</Page>
