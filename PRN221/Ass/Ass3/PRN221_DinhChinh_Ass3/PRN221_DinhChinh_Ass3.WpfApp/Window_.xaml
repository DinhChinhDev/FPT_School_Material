<Window x:Class="PRN221_DinhChinh_Ass3.WpfApp.Window_"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN221_DinhChinh_Ass3.WpfApp"
        mc:Ignorable="d"
        Title="Window_"
        Height="600"
        Width="800">

    <Window.Resources>
        <!-- Define reusable styles here -->
        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FFDDDDDD"/>
            <Setter Property="BorderBrush" Value="#FFAAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFAAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="Image">
            <Setter Property="Stretch" Value="Fill"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Canvas>
        <!-- Main content frame -->
        <Frame Name="MainContent"
               Height="399"
               Width="800"
               HorizontalAlignment="Center"
               Canvas.Top="85"
               VerticalAlignment="Top" />

        <!-- Menu for navigation -->
        <Menu Height="30"
              Width="800"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Canvas.Top="50">
            <MenuItem x:Name="UserManagement"
                      Click="UserManagement_Click"
                      Width="Auto"
                      Header="Users"
                      Style="{StaticResource {x:Type MenuItem}}" />
            <MenuItem x:Name="BookManagement"
                      Click="BookManagement_Click"
                      Width="Auto"
                      Header="Books"
                      Style="{StaticResource {x:Type MenuItem}}" />
            <MenuItem x:Name="ShipManagement"    
                      Width="Auto"
                      Header="Ships"
          Style="{StaticResource {x:Type MenuItem}}" />
        </Menu>

        <!-- Logo Image -->

        <!-- Logout Button -->
        <Button x:Name="btnLogout"
                Content="Logout"
                Canvas.Left="704"
                Canvas.Top="18"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="btnLogout_Click"
                Style="{StaticResource {x:Type Button}}"/>
    </Canvas>
</Window>
