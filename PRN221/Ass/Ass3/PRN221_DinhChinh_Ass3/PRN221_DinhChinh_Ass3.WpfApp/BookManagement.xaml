<Page x:Class="PRN221_DinhChinh_Ass3.WpfApp.BookManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PRN221_DinhChinh_Ass3.WpfApp"
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="800"
      Title="UserManagement">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#D35400" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="BorderBrush" Value="#f0a07e" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="5" />
            <Style.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="#f0a07e" Duration="0:0:0.3" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="#D35400" Duration="0:0:0.3" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <!--<Setter Property="Background" Value="#FAFAF9" />-->
            <!--<Setter Property="BorderBrush" Value="#D35400" />-->
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#5A5A5A" />
        </Style>
    </Page.Resources>
    
    <Canvas Background="White"
            Loaded="Canvas_Loaded">
        <DataGrid Name="dgvBooks"
                  Height="225"
                  Width="800"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  SelectionChanged="dgvBooks_SelectionChanged"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  IsReadOnly="True"
                  ColumnWidth="*"
                  AutoGenerateColumns="False"
                  Loaded="dgvBooks_Loaded"
                  Canvas.Left="1"
                  Canvas.Top="42">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding BookId}" />
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding BookName}" />
                <DataGridTextColumn Header="Price"
                                    Binding="{Binding Price}" />
                <DataGridTextColumn Header="Category"
                                    Binding="{Binding Category.CategoryName}" />
            </DataGrid.Columns>
        </DataGrid>
        <Canvas>

        </Canvas>
        <Label Content="Id"
               Canvas.Left="146"
               Canvas.Top="289" />
        <TextBox x:Name="txtId"
                 Canvas.Left="206"
                 TextWrapping="Wrap"
                 Canvas.Top="291"
                 Width="164"
                 IsEnabled="False"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" />
        <Label Content="Name"
               Canvas.Left="397"
               Canvas.Top="290"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <TextBox x:Name="txtName"
                 Canvas.Left="479"
                 TextWrapping="Wrap"
                 Canvas.Top="289"
                 Width="173"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" />
        <Label Content="Price"
               Canvas.Left="146"
               Canvas.Top="320"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <TextBox x:Name="txtPrice"
                 Canvas.Left="206"
                 TextWrapping="Wrap"
                 Canvas.Top="321"
                 Width="165"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" />
        <Label Content="Category"
               Canvas.Left="397"
               Canvas.Top="320"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <ComboBox x:Name="cboCategory"
                  Canvas.Left="479"
                  Canvas.Top="317"
                  Width="173"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"  />
        <Button x:Name="btnDelete"
                Content="Delete"
                Canvas.Left="397"
                Canvas.Top="366"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnDelete_Click" />
        <Button x:Name="btnSave"
                Content="Save"
                Canvas.Left="274"
                Canvas.Top="366"
                RenderTransformOrigin="-0.246,-0.028"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnSave_Click" />
        <Button x:Name="btnClear"
                Content="Clear"
                Canvas.Left="524"
                Canvas.Top="366"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnClear_Click" />
        <Label Content="BOOK MANAGEMENT"
               Canvas.Left="312"
               Canvas.Top="6"
               FontWeight="Bold"
               FontSize="16" />
    </Canvas>

</Page>
