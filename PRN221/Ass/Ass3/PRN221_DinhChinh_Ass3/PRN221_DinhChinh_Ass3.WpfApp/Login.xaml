<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN221_DinhChinh_Ass3.WpfApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Class="PRN221_DinhChinh_Ass3.WpfApp.Login"
        mc:Ignorable="d"
        Title="Login"
        Height="450"
        Width="800"
        Background="#FAFAF9">

    <Canvas>
        <Label Content="Login Page"
               Canvas.Left="350"
               Canvas.Top="100"
               FontSize="24"
               FontWeight="Bold"
               Foreground="#D35400"
               HorizontalContentAlignment="Center" />

        <Label Content="Username"
               Canvas.Left="205"
               Canvas.Top="177"
               Foreground="#5A5A5A"
               FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox x:Name="txtUserName"
                 Canvas.Left="297"
                 Canvas.Top="169"
                 Width="239"
                 Background="#FAFAF9"
                 BorderBrush="#D35400"
                 Padding="5" />

        <Label Content="Password"
               Canvas.Left="205"
               Canvas.Top="225"
               Foreground="#5A5A5A"
               FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <PasswordBox x:Name="txtPassword"
                     Canvas.Left="297"
                     Canvas.Top="217"
                     Width="239"
                     Background="#FAFAF9"
                     BorderBrush="#D35400"
                     Padding="5" />

        <Button x:Name="btnLogin"
                Content="Login"
                Canvas.Left="366"
                Canvas.Top="290"
                Width="100"
                Background="#D35400"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="#f0a07e"
                Click="btnLogin_Click" />
    </Canvas>
</Window>