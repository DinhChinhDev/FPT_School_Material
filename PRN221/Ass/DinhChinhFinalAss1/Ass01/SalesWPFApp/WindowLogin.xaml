<Window x:Class="SalesWPFApp.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="20" FontWeight="Bold"/>

        <Label Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,70,0,0"/>
        <TextBox Name="txtEmail" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,70,0,0"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,110,0,0"/>
        <PasswordBox Name="txtPassword" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,110,0,0"/>

        <Button Content="Login" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,170,0,0" Click="BtnLogin_Click"/>
    </Grid>
</Window>
