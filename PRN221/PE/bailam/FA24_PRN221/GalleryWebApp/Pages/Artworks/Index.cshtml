@page
@model GalleryWebApp.Pages.Artworks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artwork[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artwork[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artwork[0].Medium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artwork[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artwork[0].Exhibition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Artwork) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medium)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Biography)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exhibition.ExhibitionId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ArtworkId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ArtworkId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ArtworkId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
